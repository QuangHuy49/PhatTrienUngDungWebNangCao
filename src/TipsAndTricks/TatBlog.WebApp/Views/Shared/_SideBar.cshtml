<div class="my-4">
    <!--Form tìm kiếm-->
    <partial name="_SearchForm" />

    <!--Các chuyên mục/chủ đề-->
    @await Component.InvokeAsync("CategoriesWidget")

    <!--Danh sách tác giả-->
    @await Component.InvokeAsync("BestAuthors")

    <!--Top bài viết nổi bật-->
    @await Component.InvokeAsync("FeaturedPosts")

    <!--Bài viết ngẫu nhiên-->
    @await Component.InvokeAsync("RandomPosts")

    <!--Đăng ký nhận tin mới-->
    <h1>
        Đăng ký nhận tin mới
    </h1>

    <!--Tag cloud-->
    @await Component.InvokeAsync("TagsWidget")
</div>
